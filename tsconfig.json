{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,

    "declaration": true,
    "sourceMap": true,

    "rootDir": "./src",
    "outDir": "./dist"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
